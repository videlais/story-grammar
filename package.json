{
  "name": "story-grammar",
  "version": "1.2.1",
  "description": "A combinatorial grammar for narrative-based projects",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./modifiers": {
      "types": "./types/modifiers/index.d.ts",
      "import": "./dist/modifiers/index.js",
      "require": "./dist/modifiers/index.js"
    },
    "./modifiers/english": {
      "types": "./types/modifiers/english/index.d.ts",
      "import": "./dist/modifiers/english/index.js",
      "require": "./dist/modifiers/english/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:webpack": "webpack --config webpack.config.cjs",
    "build:webpack:dev": "webpack --config webpack.dev.config.cjs",
    "build:all": "npm run build && npm run build:webpack",
    "build:docs": "npm run build:all && cp dist/story-grammar.bundle.js* docs/",
    "dev": "ts-node --esm src/index.ts",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --fix",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist types",
    "prebuild": "npm run clean",
    "all": "npm run lint && npm run test && npm run build:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/videlais/story-grammar.git"
  },
  "keywords": [
    "grammar",
    "story",
    "narrative",
    "generator",
    "procedural",
    "content generation",
    "typescript",
    "javascript"
  ],
  "author": "Dan Cox",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/videlais/story-grammar/issues"
  },
  "homepage": "https://github.com/videlais/story-grammar#readme",
  "ts-node": {
    "esm": true
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
